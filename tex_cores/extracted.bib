  journal =       {\apj},
  month =         mar,
  pages =         {40},
  title =         {{The Ionized Circumstellar Envelopes of Orion Source
                   I and the Becklin-Neugebauer Object}},
  volume =        {765},
  year =          {2013},
  abstract =      {The 229 GHz (lambda1.3 mm) radio emission from
                   Orion-KL was mapped with up to 0.''14 angular
                   resolution with CARMA, allowing measurements of the
                   flux densities of Source I ("SrcI") and the
                   Becklin-Neugebauer Object (BN), the two most massive
